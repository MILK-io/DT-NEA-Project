#include <Wire.h>

void setup() {
  // Initialize serial communication
  Serial.begin(9600);
  while (!Serial) {
    // Wait for serial port to connect 
    delay(10);
  }
  
  // Initialize I2C communication
  Wire.begin();
}

void loop() {
  byte error, address;
  
  Serial.println("Scanning I2C bus...\n");
  
  // The I2C address range is 0x08 to 0x77
  for (address = 8; address <= 119; address++) {
    // The Wire.endTransmission function returns 0 if device is present
    Wire.beginTransmission(address);
    error = Wire.endTransmission();
    
    if (error == 0) {
      // Device found at this address - print in the specified format
      Serial.print("I2C device found at address 0x");
      
      // Print the address in hexadecimal format with leading zero if necessary
      if (address < 16) {
        Serial.print("0");
      }
      Serial.println(address, HEX);
    }
  }
  
  Serial.println("\nScan complete.");
  
  // Wait 5 seconds before scanning again
  delay(5000);
}
